generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model stores {
  id         String       @id @default(cuid())
  name       String
  warehouses warehouses[]
  areas      areas[]
  outflows   outflows[]
}

model warehouses {
  id       String     @id @default(cuid())
  store_id String
  name     String
  stores   stores     @relation(fields: [store_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  inflows  inflows[]
  outflows outflows[]
  invoices invoices[]
}

model areas {
  id        String      @id @default(cuid())
  store_id  String
  name      String
  stores    stores      @relation(fields: [store_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  withdraws withdraws[]
  outflows  outflows[]
  sales     sales[]

  @@unique([name, store_id], map: "unique_area_name_store")
}

model codes {
  id       String     @id
  name     String     @unique
  products products[]
}

model products {
  id         String     @id
  code_id    String
  name       String     @unique
  cost_price Decimal    @db.Decimal(10, 2)
  sale_price Decimal    @db.Decimal(10, 2)
  um         String
  code       codes      @relation(fields: [code_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  inflows    inflows[]
  outflows   outflows[]
  sales      sales[]
  invoices   invoices[]
}

model companies {
  id       String     @id @default(cuid())
  name     String     @unique
  provider Boolean    @default(false)
  inflows  inflows[]
  invoices invoices[]
}

model inflows {
  id           String     @id @default(cuid())
  warehouse_id String
  type         String
  date         DateTime   @default(now()) @db.Date
  provider_id  String?
  payment      String?
  in_number    String?
  serial       String
  product_id   String
  quantity     Int
  amount       Decimal    @db.Decimal(10, 2)
  warehouses   warehouses @relation(fields: [warehouse_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products     products   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  companies    companies? @relation(fields: [provider_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model withdraws {
  id      String   @id @default(cuid())
  area_id String
  date    DateTime @default(now()) @db.Date
  amount  Decimal  @db.Decimal(10, 2)
  areas   areas    @relation(fields: [area_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model outflows {
  id           String     @id @default(cuid())
  warehouse_id String
  type         String
  date         DateTime   @default(now()) @db.Date
  end_area_id  String?
  end_store_id String?
  out_number   String
  product_id   String
  quantity     Int
  amount       Decimal?   @db.Decimal(10, 2)
  warehouses   warehouses @relation(fields: [warehouse_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  areas        areas?     @relation(fields: [end_area_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  stores       stores?    @relation(fields: [end_store_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products     products   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model sales {
  id         String   @id @default(cuid())
  area_id    String
  date       DateTime @default(now()) @db.Date
  payment    String
  product_id String
  quantity   Int
  areas      areas    @relation(fields: [area_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products   products @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model invoices {
  id             String     @id @default(cuid())
  warehouse_id   String
  date           DateTime   @default(now()) @db.Date
  payment        String
  invoice_number String
  product_id     String
  quantity       Int
  company_id     String?
  warehouses     warehouses @relation(fields: [warehouse_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  companies      companies? @relation(fields: [company_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products       products   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
