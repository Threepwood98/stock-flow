generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTHENTICATION MODELS
// ============================================

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

// ============================================
// BUSINESS MODELS
// ============================================

model Store {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  warehouses Warehouse[]
  areas      Area[]
  outflows   Outflow[]

  @@index([name])
}

model Warehouse {
  id        String   @id @default(cuid())
  storeId   String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store    Store     @relation(fields: [storeId], references: [id], onDelete: Restrict)
  inflows  Inflow[]
  outflows Outflow[]

  @@unique([name, storeId])
  @@index([storeId])
}

model Area {
  id        String   @id @default(cuid())
  storeId   String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store     Store      @relation(fields: [storeId], references: [id], onDelete: Restrict)
  withdraws Withdraw[]
  outflows  Outflow[]
  sales     Sale[]

  @@unique([name, storeId])
  @@index([storeId])
}

model Code {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@index([name])
}

model Product {
  id        String   @id
  codeId    String
  name      String   @unique
  costPrice Decimal  @db.Decimal(10, 2)
  salePrice Decimal  @db.Decimal(10, 2)
  unit      String // Measurement unit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  code     Code      @relation(fields: [codeId], references: [id], onDelete: Restrict)
  inflows  Inflow[]
  outflows Outflow[]
  sales    Sale[]

  @@index([codeId])
  @@index([name])
}

model Company {
  id         String   @id @default(cuid())
  name       String   @unique
  isProvider Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  inflows Inflow[]

  @@index([name])
  @@index([isProvider])
}

// ============================================
// TRANSACTION MODELS
// ============================================

model Inflow {
  id          String   @id @default(cuid())
  warehouseId String
  type        String
  date        DateTime @default(now()) @db.Date
  providerId  String?
  payment     String?
  inNumber    String?
  serial      String
  productId   String
  quantity    Int      @default(0)
  amount      Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  warehouse Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Restrict)
  product   Product   @relation(fields: [productId], references: [id], onDelete: Restrict)
  provider  Company?  @relation(fields: [providerId], references: [id], onDelete: SetNull)

  @@index([warehouseId])
  @@index([productId])
  @@index([providerId])
  @@index([date])
  @@index([type])
}

model Withdraw {
  id        String   @id @default(cuid())
  areaId    String
  date      DateTime @default(now()) @db.Date
  amount    Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  area Area @relation(fields: [areaId], references: [id], onDelete: Restrict)

  @@index([areaId])
  @@index([date])
}

model Outflow {
  id          String   @id @default(cuid())
  warehouseId String
  type        String
  date        DateTime @default(now()) @db.Date
  endAreaId   String?
  endStoreId  String?
  outNumber   String
  productId   String
  quantity    Int      @default(0)
  amount      Decimal  @default(0) @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  warehouse Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Restrict)
  endArea   Area?     @relation(fields: [endAreaId], references: [id], onDelete: SetNull)
  endStore  Store?    @relation(fields: [endStoreId], references: [id], onDelete: SetNull)
  product   Product   @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([warehouseId])
  @@index([endAreaId])
  @@index([endStoreId])
  @@index([productId])
  @@index([date])
  @@index([type])
}

model Sale {
  id        String   @id @default(cuid())
  areaId    String
  date      DateTime @default(now()) @db.Date
  payment   String
  productId String
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  area    Area    @relation(fields: [areaId], references: [id], onDelete: Restrict)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([areaId])
  @@index([productId])
  @@index([date])
  @@index([payment])
}
